@model IEnumerable<SkateBoard.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<link rel="stylesheet" href="~/Asset/shop.css"/>
<section id="store" class="store py-5">
    <div class="container">
        <div class="row">
            <div class=" col-lg-8 mx-auto d-flex justify-content-around my-2 sortBtn flex-wrap">
                <a href="#" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2"
                   data-filter="all"> all</a>
                <a href="#" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2"
                   data-filter="cakes">cakes</a>
                <a href="#" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2"
                   data-filter="cupcakes">cupcakes</a>
                <a href="#" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2"
                   data-filter="sweets">sweets</a>
                <a href="#" class="btn btn-outline-secondary btn-black text-uppercase filter-btn m-2"
                   data-filter="doughnuts">doughnuts</a>
            </div>
        </div>
        <!-- search box -->
        <div class="row">
            <div class="col-10 mx-auto col-md-6">
                <form>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend ">
                            <span class="input-group-text search-box" id="search-icon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control" placeholder='item....' id="search-item">
                    </div>
                </form>
            </div>
        </div>
        <!--end of filter buttons -->
        <!-- store  items-->
        <div class="row" class="store-items" id="store-items">
            @foreach (var item in Model)
            {
                <div class=" col-lg-4 mx-auto my-3 store-item sweets" data-item="sweets">
                    <div class="card ">
                        <div class="img-container card-item">
                            <a href="/Product/Details/@item.Id"><img src="/@item.Image" class="card-img-top store-img" alt=""></a>
                            <span class="store-item-icon">
                                <a href="/ShopingCart/AddToCart/@item.Id"><i class="fas fa-shopping-cart" id="add-to-cart"></i></a>
                                
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="card-text  justify-content-between text-capitalize">
                                <h5 id="store-item-name">@item.Name</h5>
                                <h4 class="store-item-value">
                                </h4>
                                <div class="mt-2 mb-2">
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                </div>
                                <strong id="store-item-price"
                                        class="font-weight-bold">GIÁ: @item.Price VNĐ</strong>
                                    </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>

