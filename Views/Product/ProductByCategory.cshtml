<nav class="navbar navbar-expand-lg navbar-light text-white">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Product/Index">CỬA HÀNG<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../Discount/discount.html">KHUYẾN MÃI</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">BLOG</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../Contact/contact.html">LIÊN HỆ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"></a>
            </li>
        </ul>

        <!-- <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm..." aria-label="Search"> -->
        <div class="left">
            @*<div>
                    <input class="btn btn-primary" type="button" value="Input">
                </div>*@

            <button class="btn btn-outline-success my-2 my-sm-0 timkiem mr-3">

                @if (Session["Customer"] != null)
                {
                    <i class="far fa-user"></i>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Thông tin cá nhân</a>
                        <a class="dropdown-item" href="#">Đơn hàng</a>
                        <a class="dropdown-item" href="/Customer/LogOut">Đăng xuất</a>
                    </div>

                }
                else
                {
                    <a href="/Customer/Login">
                        <i class="far fa-user"></i>
                    </a>
                }
            </button>


            <button class="btn btn-outline-success my-2 my-sm-0 timkiem">
                <a href="/ShopingCart/ShowtoCart">
                    <i class="fas fa-shopping-cart"></i>
                </a>
                @Html.Action("BagCart", "ShopingCart")
            </button>

        </div>
    </div>
</nav>
<section id="store" class="store py-5">

    <div class="container">
        <div class="row">
            <div class=" col-lg-8 mx-auto d-flex justify-content-around my-2 sortBtn flex-wrap">
                @Html.Action("Category", "Product")

            </div>
        </div>
        <div class="row">
            <div class="col-10 mx-auto col-md-6">
                <form asp-controller="Product" asp-action="Index" , method="get">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend ">
                            @*<span class="input-group-text search-box" id="search-icon">
                                    <i class="fas fa-search"></i>
                                </span>*@
                        </div>
                        <input type="text" class="form-control" value="@ViewBag.Keyword" placeholder='item....' id="search-item">
                        <input type="submit" class="btn btn-success" value="Tìm kiếm" />
                    </div>
                </form>
            </div>
        </div>

        <!-- store  items-->

        <div class="row" class="store-items" id="store-items">
            @foreach (var item in Model)
            {
                <div class=" col-lg-4 mx-auto my-3 store-item sweets" data-item="sweets">
                    <div class="card ">
                        <div class="img-container card-item">
                            <a href="/Product/Details/@item.Id"><img src="/@item.Image" class="card-img-top store-img" alt=""></a>
                            <span class="store-item-icon">
                                <a href="/ShopingCart/AddToCart/@item.Id"><i class="fas fa-shopping-cart" id="add-to-cart"></i></a>

                            </span>
                        </div>
                        <div class="card-body">
                            <div class="card-text  justify-content-between text-capitalize">
                                <h5 id="store-item-name">@item.Name</h5>
                                <h4 class="store-item-value">
                                </h4>
                                <div class="mt-2 mb-2">
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                    <i class="fas fa-sun"></i>
                                </div>
                                <strong id="store-item-price"
                                        class="font-weight-bold">GIÁ: @item.Price VNĐ</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            <div class="row text-center">
                <div class="col-sm-12 page">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                </div>
            </div>
        </div>

    </div>
</section>



